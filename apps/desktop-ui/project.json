{
  "name": "desktop-ui",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/desktop-ui/src",
  "projectType": "application",
  "tags": [],
  "// targets": "to see all targets run: nx show project desktop-ui --web",
  "targets": {
    "typecheck": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tsc --noEmit -p apps/desktop-ui/tsconfig.json"
      }
    }
  },
  "build": {
    "executor": "@nx/vite:build",
    "outputs": ["{options.outputPath}"],
    "defaultConfiguration": "production",
    "options": {
      "outputPath": "release/build/renderer"
    },
    "configurations": {
      "development": {
        "mode": "development",
        "baseHref": "/"
      },
      "production": {
        "mode": "production",
        "baseHref": "./"
      }
    }
  }
}
