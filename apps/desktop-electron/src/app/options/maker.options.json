{
  "$schema": "../../../../../node_modules/nx-electron/src/validation/maker.schema.json",
  "productName": "Letta Desktop",
  "copyright": "Copyright Â© 2025 Letta",
  "appId": "com.letta.desktop",
  "electronCompile": false,
  "npmRebuild": false,
  "asar": true,
  "icon": "apps/desktop-electron/src/assets/icon.png",
  "files": [
    "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
    "!**/node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
    "!**/node_modules/*.d.ts",
    "!**/node_modules/.bin",
    "!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}",
    "!.editorconfig",
    "!**/._*",
    "!**/{.DS_Store,.git,.hg,.svn,CVS,RCS,SCCS,.gitignore,.gitattributes}",
    "!**/{__pycache__,thumbs.db,.flowconfig,.idea,.vs,.nyc_output}",
    "!**/{appveyor.yml,.travis.yml,circle.yml}",
    "!**/{npm-debug.log,yarn.lock,.yarn-integrity,.yarn-metadata.json}",
    "!node_modules",
    "node_modules/tslib"
  ],
  "mac": {
    "category": "public.app-category.developer-tools",
    "darkModeSupport": true,
    "icon": "apps/desktop-electron/src/assets/icon.icns"
  },
  "win": {
    "icon": "apps/desktop-electron/src/assets/icon.ico"
  }
}
