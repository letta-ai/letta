{
  "openapi": "3.0.3",
  "info": {
    "title": "Letta API",
    "version": "1.0.0"
  },
  "paths": {
    "/v1/deployment/agents": {
      "post": {
        "summary": "Create deployed agent",
        "tags": ["deployment"],
        "parameters": [],
        "operationId": "deployment.createAgent",
        "requestBody": {
          "description": "Body",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "sourceAgentKey": {
                    "type": "string"
                  },
                  "name": {
                    "type": "string"
                  }
                },
                "required": ["sourceAgentKey"]
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "201",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "agentDeploymentId": {
                      "type": "string"
                    }
                  },
                  "required": ["agentDeploymentId"]
                }
              }
            }
          },
          "404": {
            "description": "404",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "enum": ["Source agent not found"]
                    }
                  },
                  "required": ["message"]
                }
              }
            }
          }
        }
      }
    },
    "/v1/deployment/agents/{agentDeploymentId}/chat": {
      "post": {
        "summary": "Chat with deployed agent",
        "tags": ["deployment"],
        "parameters": [
          {
            "name": "agentDeploymentId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "operationId": "deployment.chatWithAgent",
        "requestBody": {
          "description": "Body",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "message": {
                    "type": "string"
                  },
                  "stream": {
                    "type": "boolean"
                  }
                },
                "required": ["message"]
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "201",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "messages": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "role": {
                            "type": "string"
                          },
                          "text": {
                            "type": "string"
                          }
                        },
                        "required": ["role", "text"]
                      }
                    }
                  },
                  "required": ["messages"]
                }
              }
            }
          },
          "404": {
            "description": "404",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "enum": ["Agent not found"]
                    }
                  },
                  "required": ["message"]
                }
              }
            }
          }
        }
      }
    },
    "/v1/deployment/agents/{agentDeploymentId}/sdk-id": {
      "get": {
        "summary": "Get deployed agent SDK ID",
        "tags": ["deployment"],
        "parameters": [
          {
            "name": "agentDeploymentId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "operationId": "deployment.getDeployedAgentSdkId",
        "responses": {
          "200": {
            "description": "200",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "sdkId": {
                      "type": "string"
                    }
                  },
                  "required": ["sdkId"]
                }
              }
            }
          },
          "404": {
            "description": "404",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "enum": ["Agent not found"]
                    }
                  },
                  "required": ["message"]
                }
              }
            }
          }
        }
      }
    },
    "/v1/deployment/agents/{agentDeploymentId}": {
      "post": {
        "description": "Migrate your deployed agent to a new source agent. This will overwrite the current agent's datasources, tools, and core memories. Archival and messages will be preserved.",
        "summary": "Migrate deployed agent to new source agent",
        "tags": ["deployment"],
        "parameters": [
          {
            "name": "agentDeploymentId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "operationId": "deployment.migrateDeployedAgentToNewSourceAgent",
        "requestBody": {
          "description": "Body",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "sourceAgentKey": {
                    "type": "string"
                  },
                  "preserveCoreMemories": {
                    "type": "boolean"
                  }
                },
                "required": ["sourceAgentKey"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "200",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "agentDeploymentId": {
                      "type": "string"
                    }
                  },
                  "required": ["agentDeploymentId"]
                }
              }
            }
          },
          "404": {
            "description": "404",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "enum": [
                        "Source agent not found",
                        "Deployed Agent not found"
                      ]
                    }
                  },
                  "required": ["message"]
                }
              }
            }
          }
        }
      }
    }
  }
}
