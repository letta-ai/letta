{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "types": ["jest"],
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["ES2023.Array", "es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "strictNullChecks": true,
    "paths": {
      "$web/*": ["apps/web/src/lib/*"],
      "@letta-cloud/agent-starter-kits": [
        "libs/agent-starter-kits/src/index.ts"
      ],
      "@letta-cloud/analytics": ["libs/analytics/src/events.ts"],
      "@letta-cloud/analytics/client": ["libs/analytics/src/client/index.tsx"],
      "@letta-cloud/analytics/server": ["libs/analytics/src/server/index.ts"],
      "@letta-cloud/component-library": [
        "libs/component-library/src/index.tsx"
      ],
      "@letta-cloud/component-library/*": ["component-library/src/*"],
      "@letta-cloud/composio": ["libs/composio/src/index.ts"],
      "@letta-cloud/configure": ["scripts/configure/src/index.ts"],
      "@letta-cloud/core-style-config": ["libs/core-style-config/src/index.ts"],
      "@letta-cloud/core-style-config/*": ["utils/src/*"],
      "@letta-cloud/crm": ["libs/crm/src/index.ts"],
      "@letta-cloud/database": ["libs/database/src/index.ts"],
      "@letta-cloud/database-testing": ["libs/database-testing/src/index.ts"],
      "@letta-cloud/environmental-variables": [
        "libs/environmental-variables/src/index.ts"
      ],
      "@letta-cloud/feature-flags": ["libs/feature-flags/src/index.ts"],
      "@letta-cloud/generic-utils": ["libs/generic-utils/src/index.ts"],
      "@letta-cloud/helpful-client-utils": [
        "libs/helpful-client-utils/src/index.ts"
      ],
      "@letta-cloud/letta-agents-api": ["libs/letta-agents-api/src/index.ts"],
      "@letta-cloud/letta-agents-api-testing": [
        "libs/letta-agents-api-testing/src/index.ts"
      ],
      "@letta-cloud/lettuce-client": ["libs/lettuce-client/src/index.ts"],
      "@letta-cloud/lettuce-server": [
        "libs/lettuce-client/src/lib/lettuce-server.ts"
      ],
      "@letta-cloud/redis": ["libs/redis/src/index.ts"],
      "@letta-cloud/runtime": ["libs/runtime/src/index.ts"],
      "@letta-cloud/shared-ade-components": [
        "libs/shared-ade-components/src/index.ts"
      ],
      "@letta-cloud/shared-ade-components/translations": [
        "libs/shared-ade-components/src/translations/index.ts"
      ],
      "@letta-cloud/translations": ["libs/translations/src/index.ts"],
      "@letta-cloud/type-utils": ["libs/type-utils/src/index.ts"],
      "@letta-cloud/types": ["libs/types/src/index.ts"],
      "@letta-cloud/web-api-client": ["libs/web-api-client/src/index.ts"]
    },
    "jsx": "react"
  },
  "ts-node": {
    "require": ["tsconfig-paths/register"],
    "compilerOptions": {
      "module": "commonjs"
    }
  },
  "exclude": ["node_modules", "tmp", "*.config.js", "*.config.ts"]
}
