##########################################################
# Example environment variable configurations for Letta
# Uncomment and set the sections you want to configure.
##########################################################

########################
# Database Configuration
########################
# LETTA_PG_USER=letta
# LETTA_PG_PASSWORD=your_password_here
# LETTA_PG_DB=letta
# LETTA_PG_PORT=5432
# LETTA_DB_HOST=letta-db
# LETTA_PG_URI=postgresql://letta:your_password@letta-db:5432/letta

########################
# Redis Configuration
########################
# LETTA_REDIS_HOST=redis-host
# LETTA_REDIS_PORT=6379
# LETTA_REDIS_PASSWORD=your_redis_password

########################
# Debugging
########################
# LETTA_DEBUG=True

########################
# OpenAI configuration
########################
# OPENAI_API_KEY=your_openai_api_key_here

########################
# Groq configuration
########################
# GROQ_API_KEY=your_groq_api_key_here

########################
# Anthropic configuration
########################
# ANTHROPIC_API_KEY=your_anthropic_api_key_here

########################
# Gemini configuration
########################
# GEMINI_API_KEY=your_gemini_api_key_here

########################
# Ollama configuration
########################
# OLLAMA_BASE_URL=http://host.docker.internal:11434

########################
# Azure OpenAI configuration
########################
# AZURE_API_KEY=your_azure_api_key_here
# AZURE_BASE_URL=https://your-resource.openai.azure.com
# AZURE_API_VERSION=2024-02-15-preview

########################
# vLLM configuration
########################
# VLLM_API_BASE=http://host.docker.internal:8000

########################
# OpenLLM configuration
########################
# OPENLLM_AUTH_TYPE=bearer
# OPENLLM_API_KEY=your_openllm_api_key_here

########################
# OpenTelemetry/Observability
########################
# LETTA_OTEL_EXPORTER_OTLP_ENDPOINT=http://your-otel-collector:4317

########################
# ClickHouse (optional)
########################
# CLICKHOUSE_ENDPOINT=http://clickhouse:8123
# CLICKHOUSE_DATABASE=letta
# CLICKHOUSE_USERNAME=default
# CLICKHOUSE_PASSWORD=your_clickhouse_password

########################
# Sandbox/Volume Mount (optional)
########################
# LETTA_SANDBOX_MOUNT_PATH=/absolute/path/to/local/dir

########################
# Resend Email Example (optional)
########################
# RESEND_API_KEY=your_resend_api_key_here
# RESEND_TARGET_EMAIL_ADDRESS=you@example.com
