{
  "$schema": "./node_modules/oxlint/configuration_schema.json",
  "plugins": ["typescript", "react", "unicorn", "import"],
  "categories": {
    "correctness": "warn",
    "suspicious": "off",
    "pedantic": "off",
    "style": "off"
  },
  "env": {
    "builtin": true,
    "browser": true,
    "es2022": true,
    "node": true
  },
  "ignorePatterns": [
    "**/dist/**",
    "**/node_modules/**",
    "**/*.config.js",
    "**/*.config.mjs",
    "**/*.config.ts",
    "**/*.d.ts",
    "**/*.json",
    "**/*.js",
    "**/.preview/**",
    "**/.next/**",
    "**/build/**",
    "**/coverage/**",
    "**/_autogenerated/**"
  ],
  "overrides": [
    {
      "files": ["**/*.ts", "**/*.tsx"],
      "rules": {
        "typescript/consistent-type-imports": "error",
        "typescript/no-explicit-any": "error",
        "no-invalid-remove-event-listener": "error",
        "typescript/no-unused-vars": "error",
        "typescript/prefer-as-const": "warn",
        "no-unused-vars": ["error", {
          "args": "all",
          "argsIgnorePattern": "^_",
          "caughtErrors": "all",
          "caughtErrorsIgnorePattern": "^_",
          "destructuredArrayIgnorePattern": "^_",
          "varsIgnorePattern": "^_",
          "ignoreRestSiblings": true
        }],
        "unicorn/no-useless-fallback-in-spread": "error",
        "no-new-array": "error",
        "no-debugger": "warn",
        "no-console": "off",
        "arrow-body-style": "off",
        "sort-imports": "off",
        "sort-keys": "off",
        "no-magic-numbers": "off",
        "no-ternary": "off",
        "unicorn/filename-case": "off"
      }
    },
    {
      "files": ["apps/web/**/*.{ts,tsx}"],
      "rules": {
        "react/react-in-jsx-scope": "off",
        "react-hooks/exhaustive-deps": "error",
      }
    },
    {
      "files": ["apps/desktop-**/**/*.{ts,tsx}"],
      "rules": {
        "react/react-in-jsx-scope": "off",
        "node/no-unsupported-features/es-syntax": "off"
      }
    },
    {
      "files": ["libs/sdk-**/**/*.ts"],
      "rules": {
        "typescript/consistent-type-exports": "warn",
        "typescript/prefer-nullish-coalescing": "warn"
      }
    },
    {
      "files": ["**/*.spec.ts", "**/*.spec.tsx", "**/*.test.ts", "**/*.test.tsx", "**/(automation-internal-api)/**"],
      "rules": {
        "typescript/no-explicit-any": "off",
        "no-unused-vars": "off",
        "typescript/no-unused-vars": "off"
      }
    },
    {
      "files": ["**/*.cy.{ts,tsx}", "cypress/**/*.{ts,tsx}"],
      "rules": {
        "typescript/no-explicit-any": "off"
      }
    },
    {
      "files": [
        "libs/types/**/*.ts",
        "libs/service-redis/src/schemas/**/*.ts",
        "libs/utils-*/**/*type-utils*",
        "libs/utils-*/**/*camelCaseKeys*",
        "libs/utils-*/**/*jsonToCurl*",
        "**/pythonValidatorWorker.ts",
        "**/getTextareaCaretPosition.ts",
        "**/*otel-types*",
        "scripts/**/*.ts",
        "libs/ui-component-library/**/JSONViewer/**",
        "libs/ui-component-library/**/JSONDiff/**",
        "libs/ui-component-library/**/Select/**",
        "libs/ui-component-library/**/Tooltip/**",
        "libs/ui-component-library/**/Form/**",
        "libs/ui-component-library/**/RadioDot/**",
        "libs/ui-component-library/**/IconHelper/**",
        "**/handleMessageRateLimiting.ts",
        "libs/service-database-testing/**/*.ts",
        "apps/desktop-electron/**/*.ts",
        "libs/ui-ade-components/**/MCP*/**/*.ts*",
        "libs/ui-ade-components/**/AgentSimulator/**/*.ts*",
        "libs/ui-ade-components/**/ContextEditorPanel/**/*.ts*",
        "libs/ui-ade-components/**/hooks/**/*.ts*",
        "libs/tmp-cloud-api-router/**/*.ts",
        "libs/service-redis/src/lib/redis.ts",
        "apps/web/**/observability/**/*.ts*",
        "**/computeTokenCountWorker/**/*.ts",
        "**/computeCoreMemorySummaryWorker/**/*.ts",
        "apps/core/sandbox/**/*.ts",
        "apps/web/scripts/**/*.ts",
        "apps/web/src/instrumentation.ts",
        "apps/web/src/middleware.ts",
        "apps/web/testing/**/*.ts",
        "apps/web/src/migrations/**/*.ts",
        "libs/sdk-*/src/lib/types.ts",
        "libs/sdk-*/**/*Contracts.ts",
        "libs/service-*/src/lib/types.ts",
        "libs/service-*/src/index.ts",
        "libs/service-clickhouse/**/*.ts",
        "libs/service-auth/**/*.ts",
        "libs/ui-ade-components/**/Messages/**/*.tsx",
        "libs/ui-ade-components/**/ToolManager/**/*.tsx",
        "libs/ui-ade-components/**/ToolRules/**/*.tsx",
        "libs/ui-component-library/**/stories.tsx",
        "libs/ui-component-library/**/Dialog/**/*.tsx",
        "libs/ui-component-library/**/Markdown/**/*.tsx",
        "libs/ui-component-library/**/ChatInput/**/*.ts",
        "apps/web/src/lib/**/*router*.ts",
        "apps/web/src/lib/sdk/**/*.ts",
        "apps/web/src/app/**/**/responses/**/*.tsx",
        "apps/web/src/lib/client/**/**/ADEPage/**/*.tsx"
      ],
      "rules": {
        "typescript/no-explicit-any": "off"
      }
    }
  ]
}
